# Cray CAF Compiler
FC=ftn
NPROCS=4
FFLAGS="-h caf -F -DNPROCS=$NPROCS"
LAUNCHER="aprun -n $NPROCS"

# UH CAF Compiler
FC=uhcaf
NPROCS=4
FFLAGS="-ftpp -DNPROCS=$NPROCS"
LAUNCHER="cafrun -n $NPROCS"

# Intel CAF Compiler
FC=ifort
NPROCS=4
FFLAGS="-coarray -coarray-num-images=$NPROCS -fpp -DNPROCS=$NPROCS"
LAUNCHER=""

